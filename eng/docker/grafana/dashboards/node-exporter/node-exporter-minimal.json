{
    "title": "Node Exporter - Minimal (Prometheus)",
    "panels": [
        {
            "type": "stat",
            "title": "CPU Uso (%)",
            "gridPos": {
                "x": 0,
                "y": 0,
                "w": 6,
                "h": 4
            },
            "targets": [
                {
                    "expr": "100 - (avg by(instance)(irate(node_cpu_seconds_total{mode=\"idle\"}[1m])) * 100)",
                    "refId": "A"
                }
            ],
            "datasource": "Prometheus",
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "thresholds": {
                        "mode": "percentage",
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "orange",
                                "value": 70
                            },
                            {
                                "color": "red",
                                "value": 90
                            }
                        ]
                    }
                }
            },
            "options": {
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                }
            }
        },
        {
            "type": "stat",
            "title": "Mem√≥ria Usada (%)",
            "gridPos": {
                "x": 6,
                "y": 0,
                "w": 6,
                "h": 4
            },
            "targets": [
                {
                    "expr": "100 * (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes))",
                    "refId": "A"
                }
            ],
            "datasource": "Prometheus",
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "thresholds": {
                        "mode": "percentage",
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "orange",
                                "value": 70
                            },
                            {
                                "color": "red",
                                "value": 90
                            }
                        ]
                    }
                }
            },
            "options": {
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                }
            }
        },
        {
            "type": "stat",
            "title": "Disco Usado (%)",
            "gridPos": {
                "x": 0,
                "y": 4,
                "w": 6,
                "h": 4
            },
            "targets": [
                {
                    "expr": "100 * (1 - (node_filesystem_avail_bytes{mountpoint=\"/\",fstype!~\"tmpfs|overlay\"} / node_filesystem_size_bytes{mountpoint=\"/\",fstype!~\"tmpfs|overlay\"}))",
                    "refId": "A"
                }
            ],
            "datasource": "Prometheus",
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "thresholds": {
                        "mode": "percentage",
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "orange",
                                "value": 70
                            },
                            {
                                "color": "red",
                                "value": 90
                            }
                        ]
                    }
                }
            },
            "options": {
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                }
            }
        },
        {
            "type": "stat",
            "title": "Status node-exporter",
            "gridPos": {
                "x": 6,
                "y": 4,
                "w": 6,
                "h": 4
            },
            "targets": [
                {
                    "expr": "up{job=\"node-exporter\"}",
                    "refId": "A"
                }
            ],
            "datasource": "Prometheus",
            "fieldConfig": {
                "defaults": {
                    "mappings": [
                        {
                            "type": "value",
                            "options": {
                                "0": {
                                    "text": "DOWN"
                                },
                                "1": {
                                    "text": "UP"
                                }
                            }
                        }
                    ],
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "red",
                                "value": null
                            },
                            {
                                "color": "green",
                                "value": 1
                            }
                        ]
                    }
                }
            },
            "options": {
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                }
            }
        },
        {
            "type": "stat",
            "title": "Total de Processos",
            "gridPos": {
                "x": 0,
                "y": 8,
                "w": 6,
                "h": 4
            },
            "targets": [
                {
                    "expr": "node_procs_running",
                    "refId": "A"
                }
            ],
            "datasource": "Prometheus",
            "fieldConfig": {
                "defaults": {
                    "unit": "short"
                }
            },
            "options": {
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                }
            }
        }
    ],
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "time": {
        "from": "now-15m",
        "to": "now"
    },
    "timezone": "browser"
}